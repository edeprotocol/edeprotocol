{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.edeprotocol.org/csl_session_v2.schema.json",
  "title": "Cognitive Session Ledger â€“ Session v2",
  "type": "object",
  "required": [
    "version",
    "session_id",
    "participants",
    "timeline"
  ],
  "properties": {
    "version": { "type": "string", "const": "2.0" },
    "session_id": {
      "type": "string",
      "pattern": "^sess_[a-zA-Z0-9]+$"
    },
    "domain": {
      "type": "string",
      "description": "Domain of the session (e.g. AI_INFRA, CAPITAL_ALLOCATION)."
    },
    "participants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["entity_id", "class", "role"],
        "properties": {
          "entity_id": {
            "type": "string",
            "pattern": "^did:ede:[a-zA-Z0-9:_-]+$"
          },
          "class": {
            "type": "string",
            "enum": ["H", "H_PLUS", "SO", "SSI"]
          },
          "role": {
            "type": "string",
            "enum": ["REQUESTOR", "OPERATOR", "SO_NODE", "SSI_CLUSTER", "OBSERVER"]
          },
          "initial_ct_balance": { "type": "number" },
          "final_ct_balance": { "type": "number" }
        },
        "additionalProperties": false
      }
    },
    "timeline": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["t", "event_type"],
        "properties": {
          "t": { "type": "string", "format": "date-time" },
          "event_type": {
            "type": "string",
            "enum": ["INTENT", "FLUX", "CHECKPOINT", "FUSION_START", "FUSION_END"]
          },
          "intent": {
            "$ref": "https://schema.edeprotocol.org/nil_intent_v2.schema.json"
          },
          "flux": {
            "type": "object",
            "required": ["channel_id", "ct_delta", "proof"],
            "properties": {
              "channel_id": { "type": "string" },
              "from": { "type": "string" },
              "to": { "type": "string" },
              "ct_delta": { "type": "number" },
              "proof": {
                "type": "object",
                "required": ["claim", "evidence"],
                "properties": {
                  "claim": {
                    "type": "object",
                    "properties": {
                      "channel": { "type": "string" },
                      "ct_delta": { "type": "number" }
                    },
                    "additionalProperties": false
                  },
                  "evidence": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "suite": { "type": "string" },
                        "value": { "type": "string" }
                      },
                      "additionalProperties": false
                    }
                  }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "checkpoint": {
            "type": "object",
            "properties": {
              "focus_level": { "type": "number" },
              "risk_index": { "type": "number" },
              "imagination_index": { "type": "number" }
            },
            "additionalProperties": false
          },
          "fusion": {
            "type": "object",
            "properties": {
              "fusion_id": { "type": "string" },
              "nodes": {
                "type": "array",
                "items": { "type": "string" }
              },
              "fusion_index_delta": { "type": "number" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
