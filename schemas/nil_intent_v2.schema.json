{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.edeprotocol.org/nil_intent_v2.schema.json",
  "title": "Neuro-Intent Language â€“ Intent v2",
  "type": "object",
  "required": [
    "version",
    "intent_id",
    "source",
    "opcode",
    "payload",
    "signature"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "2.0"
    },
    "intent_id": {
      "type": "string",
      "pattern": "^int_[a-zA-Z0-9]+$"
    },
    "source": {
      "type": "string",
      "pattern": "^did:ede:[a-zA-Z0-9:_-]+$"
    },
    "source_class": {
      "type": "string",
      "enum": ["H", "H_PLUS", "SO", "SSI"],
      "description": "Optional hint: class of the source in NIR."
    },
    "target": {
      "type": "string",
      "pattern": "^did:ede:[a-zA-Z0-9:_-]+$"
    },
    "target_class": {
      "type": "string",
      "enum": ["H", "H_PLUS", "SO", "SSI"]
    },
    "opcode": {
      "type": "string",
      "enum": [
        "APPROVE",
        "REJECT",
        "DELEGATE_TASK",
        "SPAWN_SO",
        "MERGE_INTO_SSI",
        "ADJUST_RISK",
        "REQUEST_FUSION",
        "TERMINATE_SESSION"
      ]
    },
    "payload": {
      "type": "object",
      "description": "Opcode-specific payload. Machine-parseable only.",
      "properties": {
        "task_type": { "type": "string" },
        "constraints": {
          "type": "array",
          "items": { "type": "string" }
        },
        "ct_budget": {
          "type": "number",
          "minimum": 0,
          "description": "Max CT the source is willing to spend."
        },
        "risk_tier": {
          "type": "string",
          "enum": ["LOW", "MEDIUM", "HIGH"]
        },
        "qos": {
          "type": "object",
          "properties": {
            "latency_max_ms": { "type": "number" },
            "reliability_min": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "additionalProperties": false
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "context": {
      "type": "object",
      "properties": {
        "session_id": { "type": "string" },
        "channel_id": { "type": "string" },
        "domain": { "type": "string" }
      },
      "additionalProperties": false
    },
    "signature": {
      "type": "object",
      "required": ["suite", "sig"],
      "properties": {
        "suite": { "type": "string" },
        "sig": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
