{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.edeprotocol.org/transducer_frame_v1.schema.json",
  "title": "TransducerFrame v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["frame_id", "timestamp", "channels", "signal_quality", "provenance"],
  "properties": {
    "frame_id": {"type": "string"},
    "timestamp": {"type": "string", "format": "date-time"},
    "duration_ms": {"type": "number", "minimum": 0},
    "channels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "samples"],
        "properties": {
          "name": {"type": "string"},
          "sampling_rate_hz": {"type": "number", "minimum": 0},
          "samples": {
            "type": "array",
            "items": {"type": "number"}
          }
        }
      }
    },
    "signal_quality": {
      "type": "object",
      "additionalProperties": false,
      "required": ["confidence", "noise_floor_db"],
      "properties": {
        "confidence": {"type": "number", "minimum": 0, "maximum": 1},
        "noise_floor_db": {"type": "number"},
        "artifacts": {"type": "array", "items": {"type": "string"}}
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["device_id", "subject_id"],
      "properties": {
        "device_id": {"type": "string"},
        "subject_id": {"type": "string"},
        "session_id": {"type": "string"}
      }
    }
  }
}
