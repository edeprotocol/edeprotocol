{

  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "$id": "https://ede-protocol.org/schemas/nil_feedback_v1.schema.json",

  "title": "NIL Feedback v1",

  "type": "object",

  "required": [

    "type",

    "subject_neuro_did",

    "session_id",

    "timestamp",

    "feedback_type",

    "intensity",

    "duration_ms",

    "payload"

  ],

  "properties": {

    "type": {

      "type": "string",

      "const": "NIL_FEEDBACK_V1"

    },

    "subject_neuro_did": {

      "type": "string"

    },

    "session_id": {

      "type": "string"

    },

    "timestamp": {

      "type": "string",

      "format": "date-time"

    },

    "feedback_type": {

      "type": "string",

      "enum": ["VISUAL_OVERLAY", "AUDITORY", "HAPTIC", "OTHER"]

    },

    "target_region": {

      "type": "string"

    },

    "intensity": {

      "type": "number",

      "minimum": 0,

      "maximum": 1

    },

    "duration_ms": {

      "type": "number",

      "minimum": 0

    },

    "payload": {

      "type": "object"

    }

  },

  "additionalProperties": false

}
