{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.edeprotocol.org/nil_stream_v1.schema.json",
  "title": "Neuro-Intent Language â€“ Stream v1",
  "type": "object",
  "required": ["version", "stream_id", "source", "frames"],
  "properties": {
    "version": { "type": "string", "const": "1.0" },
    "stream_id": {
      "type": "string",
      "pattern": "^str_[a-zA-Z0-9]+$"
    },
    "source": {
      "type": "string",
      "pattern": "^did:ede:[a-zA-Z0-9:_-]+$"
    },
    "source_class": {
      "type": "string",
      "enum": ["H_PLUS", "SO", "SSI"]
    },
    "frames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["t", "opcode", "value", "confidence"],
        "properties": {
          "t": { "type": "string", "format": "date-time" },
          "opcode": { "type": "string" },
          "value": { "type": "number" },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "additionalProperties": false
      }
    },
    "ct_rate_estimate": {
      "type": "number",
      "description": "Estimated CT per second consumed by this stream."
    }
  },
  "additionalProperties": false
}
